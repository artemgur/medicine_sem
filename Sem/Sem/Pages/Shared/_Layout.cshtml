<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap 4 Website Example</title>
    @Html.AntiForgeryToken()
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*TODO understand what this line does*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>

    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script type="text/javascript" src="/js/scripts.js"></script>
</head>
<body>
    <nav class="navbar color_primary shadow_my">
        <div>
            <a class="navbar-brand float-left cross"  onclick="Redirect('@Url.Page("./Index")')">Медицина</a>@*TODO proper name*@
            <a class="nav-link color_text float-left" onclick="Redirect('@Url.Page("./Index")')">Статьи</a>
            <a class="nav-link color_text float-left" onclick="Redirect('@Url.Page("./ForumIndex")')">Форум</a>
        </div>
        <form id="search_form" class="form-inline">
            <input id="search_input" class="form-control mr-sm-2" type="text" placeholder="Поиск">
            <button id="search_button" class="btn btn-success" type="button" onclick="Search('@Url.Page("./Index")', 'search')">Поиск</button>
            <select id="tags_select" class="selectpicker" multiple data-live-search="true" title="Теги" style="margin-left: 10px">
                <option>ГРИПП</option>
                <option>ОРВИ</option>
                <option>КОРОНАВИРУС</option>
            </select>
        </form>
        <div id="UserAccount">
            @if (Pages.SignIn.userView)
            {
                <a class="nav-link color_text float-left" onclick="Redirect('@Url.Page("./Account")')">Личный кабинет</a>
            }
            else
            {
                <a class="nav-link color_text float-left" onclick="Redirect('@Url.Page("./SignIn")')">Вход</a>
                <a class="nav-link color_text float-left" onclick="Redirect('@Url.Page("./Register")')">Регистрация</a>
            }
        </div>
    </nav>

    @RenderBody()
</body>
</html>