<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap 4 Website Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*TODO understand what this line does*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>

    <link rel="stylesheet" type="text/css" href="css/style.css">
    <script type="text/javascript" src="js/scripts.js"></script>
</head>
<body>
    <nav class="navbar color_primary shadow_my">
        <div>
            <a class="navbar-brand float-left" href="@Url.Page("./Index")">Медицина</a>@*TODO proper name*@
            <a class="nav-link color_text float-left" href="@Url.Page("./Index")">Статьи</a>
            <a class="nav-link color_text float-left" href="@Url.Page("./ForumIndex")">Форум</a>
        </div>
        <form id="search_form" class="form-inline">
            <input id="search_input" class="form-control mr-sm-2" type="text" placeholder="Поиск">
            <button id="search_button" class="btn btn-success" type="submit">Поиск</button>
            <select id="tags_select" class="selectpicker" multiple data-live-search="true" title="Теги" style="margin-left: 10px">
                <option>Грипп</option>
                <option>ОРВИ</option>
                <option>Коронавирус</option>
            </select>
        </form>
        <div id="UserAccount">
            @if (Pages.SignIn.userView)
            {
                <a class="nav-link color_text float-left" href="@Url.Page("./Account")">Личный кабинет</a>
            }
            else
            {
                <a class="nav-link color_text float-left" href="@Url.Page("./SignIn")">Вход</a> @*Личный кабинет ./Account*@
                <a class="nav-link color_text float-left" href="@Url.Page("./Register")">Регистрация</a>
            }
        </div>
    </nav>

    @RenderBody()
</body>
</html>