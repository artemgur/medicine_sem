@page "{index?}"
@model Article

@{
    Layout = "Shared/_Layout";
}

<div class="article_parent">
    <div id="header_line">
        <img id="placeholder" class="star" src="/icons/empty_star.png" alt="Add to favourite">
        <h1 id="article_header">@Model.ArticlePars[0]</h1>
        <img id="empty_star" class="star" src="/icons/empty_star.png" style="display: @(Request.Cookies["user_id"] == null || Model.CountArticleToUser != 0 ? "none" : "flex")" alt="Add to favourite" onclick="AddToFavorite('/Article', @Model.ArticlePars[5], 'none', 'flex', 'Add')">
        <img id="filled_star" class="star" src="/icons/filled_star.png" style="display: @(Request.Cookies["user_id"] == null || Model.CountArticleToUser == 0 ? "none" : "flex")" alt="Add to favourite" onclick="AddToFavorite('/Article', @Model.ArticlePars[5], 'flex', 'none', 'Remove')">
    </div>
    <img src="@(Model.ArticlePars[1] != null ? "/img/placeholder.jpg" : Model.ArticlePars[1])" alt="article_image">
    <p>@Model.ArticlePars[2]</p>
    @foreach (var tag in Model.tags)
    {
        <span class="badge @tag[1]">@tag[0]</span>
    }
</div>