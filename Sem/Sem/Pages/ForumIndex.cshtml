@page
@model Sem.Pages.ForumIndex

@{
    Layout = "Shared/_Layout";
}

<button class="btn-lg btn-success" id="create_forum_item_button" onclick="openConstructor()">Создать</button>
<div class="container-fluid">
    <div class="row">
        @foreach (var indexForum in DataBase.Select("SELECT * FROM chats;"))
        {
            @await Component.InvokeAsync("IndexForum", indexForum)
        }
    </div>
</div>